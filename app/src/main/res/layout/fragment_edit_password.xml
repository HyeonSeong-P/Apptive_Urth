<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#faf8f7">
    <ImageButton
        android:id="@+id/back_btn_edit_password"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@drawable/back"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:includeFontPadding="false"
        android:textStyle="normal"
        android:id="@+id/curr_password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="기존 비밀번호"
        android:textColor="#707070"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@id/back_btn_edit_password"
        android:layout_marginTop="41dp"/>

    <EditText
        android:includeFontPadding="false"
        android:textStyle="normal"
        android:id="@+id/curr_password_guide_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:hint="기존 비밀번호를 작성해주세요"
        android:inputType="textPassword"
        android:textColorHint="#c9c9c9"
        android:textColor="#3e3a39"
        android:background="@android:color/transparent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@id/curr_password_text"
        android:layout_marginTop="10dp"/>

    <View
        android:id="@+id/line_1_edit_password"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c9c9c9"
        android:layout_marginHorizontal="31dp"
        app:layout_constraintTop_toBottomOf="@id/curr_password_guide_text"
        android:layout_marginTop="22dp"/>

    <TextView
        android:includeFontPadding="false"
        android:id="@+id/new_password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="변경 비밀번호"
        android:textColor="#707070"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@id/line_1_edit_password"
        android:layout_marginTop="18dp"/>

    <EditText
        android:includeFontPadding="false"
        android:id="@+id/new_password_guide_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:hint="변경 비밀번호를 작성해주세요"
        android:inputType="textPassword"
        android:textColorHint="#c9c9c9"
        android:textColor="#3e3a39"
        android:background="@android:color/transparent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@id/new_password_text"
        android:layout_marginTop="10dp"/>

    <View
        android:id="@+id/line_2_edit_password"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c9c9c9"
        android:layout_marginHorizontal="31dp"
        app:layout_constraintTop_toBottomOf="@id/new_password_guide_text"
        android:layout_marginTop="22dp"/>

    <TextView
        android:includeFontPadding="false"
        android:id="@+id/confirm_password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="비밀번호 확인"
        android:textColor="#707070"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@id/line_2_edit_password"
        android:layout_marginTop="18dp"/>

    <EditText
        android:includeFontPadding="false"
        android:id="@+id/confirm_password_guide_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:hint="비밀번호를 다시 작성해주세요"
        android:textColorHint="#c9c9c9"
        android:textColor="#3e3a39"
        android:inputType="textPassword"
        android:background="@android:color/transparent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@id/confirm_password_text"
        android:layout_marginTop="10dp"/>

    <View
        android:id="@+id/line_3_edit_password"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c9c9c9"
        android:layout_marginHorizontal="31dp"
        app:layout_constraintTop_toBottomOf="@id/confirm_password_guide_text"
        android:layout_marginTop="22dp"/>
    
    <Button
        android:textStyle="bold"
        android:includeFontPadding="false"
        android:id="@+id/password_edit_button"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:text="변경"
        android:layout_marginHorizontal="28dp"
        android:background="@drawable/button_design"
        android:textColor="#faf8f7"
        app:layout_constraintTop_toBottomOf="@id/line_3_edit_password"
        android:layout_marginTop="50dp"/>
    
    


</androidx.constraintlayout.widget.ConstraintLayout>