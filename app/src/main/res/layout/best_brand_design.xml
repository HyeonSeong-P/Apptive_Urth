<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/brand_image_best_brand_card"
        android:layout_width="67dp"
        android:layout_height="67dp"
        app:cardCornerRadius="33.5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <ImageView
            android:id="@+id/brand_image_best_brand"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"/>
    </androidx.cardview.widget.CardView>

    <!--<de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/brand_image_best_brand"
        android:layout_width="67dp"
        android:layout_height="67dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/circle_background"
        />-->

    <TextView
        android:includeFontPadding="false"
        android:textStyle="normal"
        android:id="@+id/best_brand_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="#3e3a39"
        app:layout_constraintTop_toBottomOf="@id/brand_image_best_brand_card"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@id/brand_image_best_brand_card"
        app:layout_constraintRight_toRightOf="@id/brand_image_best_brand_card"/>

</androidx.constraintlayout.widget.ConstraintLayout>