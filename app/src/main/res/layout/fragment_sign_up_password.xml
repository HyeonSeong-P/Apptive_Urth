<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:includeFontPadding="false"
        android:id="@+id/guide_password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:textSize="16sp"
        android:textColor="#3e3a39"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:includeFontPadding="false"
        android:id="@+id/sign_up_password_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="비밀번호을 입력하세요"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/guide_password_text"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:inputType="textPassword"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <CheckBox
        android:id="@+id/password_sight_check_box"
        android:background="@drawable/custom_checkbox"
        android:button="@null"
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:layout_constraintTop_toBottomOf="@id/sign_up_password_edit_text"
        android:layout_marginTop="23dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:includeFontPadding="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#3e3a39"
        android:text="비밀번호 보이기"
        app:layout_constraintLeft_toRightOf="@id/password_sight_check_box"
        app:layout_constraintTop_toTopOf="@id/password_sight_check_box"
        app:layout_constraintBottom_toBottomOf="@id/password_sight_check_box"
        android:layout_marginLeft="7dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>