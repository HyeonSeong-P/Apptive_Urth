<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="142dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/urth_news_image"
        android:layout_width="118dp"
        android:layout_height="142dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:includeFontPadding="false"
        android:id="@+id/urth_news_brand_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#3e3a39"
        app:layout_constraintTop_toTopOf="@id/urth_news_image"
        app:layout_constraintLeft_toRightOf="@id/urth_news_image"
        android:layout_marginLeft="12dp"/>

    <TextView
        android:includeFontPadding="false"
        android:id="@+id/urth_news_description_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="#707070"
        app:layout_constraintLeft_toRightOf="@id/urth_news_image"
        android:layout_marginLeft="12dp"
        app:layout_constraintTop_toBottomOf="@id/urth_news_brand_text"
        android:layout_marginTop="9dp"/>

    <TextView
        android:includeFontPadding="false"
        android:id="@+id/urth_news_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#a8a8a8"
        app:layout_constraintTop_toBottomOf="@id/urth_news_description_text"
        android:layout_marginTop="2dp"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@id/urth_news_image"
        android:layout_marginLeft="12dp"
        />
    
    <Button
        android:includeFontPadding="false"
        android:id="@+id/go_to_campaign_btn"
        android:layout_width="65dp"
        android:layout_height="22dp"
        android:textSize="10sp"
        android:text="더 알아보기"
        android:textColor="#faf8f7"
        android:background="@drawable/button_design"
        app:layout_constraintBottom_toBottomOf="@id/urth_news_image"
        app:layout_constraintLeft_toRightOf="@id/urth_news_image"
        android:layout_marginLeft="12dp"/>





</androidx.constraintlayout.widget.ConstraintLayout>