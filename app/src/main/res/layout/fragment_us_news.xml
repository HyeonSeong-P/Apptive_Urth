<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#faf8f7">

    <TextView
        android:includeFontPadding="false"
        android:id="@+id/urth_news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Urth News"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#3e3a39"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="48dp"/>

    <TextView
        android:includeFontPadding="false"
        android:id="@+id/urth_news_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="지구를 지키는 패션기업들의 다양한 이벤트"
        app:layout_constraintTop_toBottomOf="@id/urth_news_title"
        android:layout_marginTop="7dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/urth_news_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/urth_news_description"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>