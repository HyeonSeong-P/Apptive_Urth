<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/more_new_header"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/more_new_product_empty_partition"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="18dp"/>

    <View
        android:id="@+id/more_new_product_brand_line"
        app:layout_constraintTop_toBottomOf="@id/more_new_product_empty_partition"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#e6e6e6">
    </View>



    <TextView
        android:includeFontPadding="false"
        android:id="@+id/more_new_product_brand_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#707070"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/more_new_product_brand_line"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"
        android:paddingTop="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>