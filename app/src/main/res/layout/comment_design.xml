<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:includeFontPadding="false"
        android:id="@+id/nickname_text_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#707070"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:textStyle="normal"
        android:includeFontPadding="false"
        android:id="@+id/comment_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#707070"
        app:layout_constraintLeft_toRightOf="@id/nickname_text_comment"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="35dp"
        />
    <ImageButton
        android:id="@+id/delete_comment_button"
        android:layout_width="10dp"
        android:layout_height="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/comment_text"
        app:layout_constraintBottom_toBottomOf="@id/comment_text"
        android:layout_marginRight="20dp"
        android:visibility="gone"
        android:src="@drawable/delete"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        />
    <TextView
        android:includeFontPadding="false"
        android:textStyle="normal"
        android:id="@+id/comment_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>


</androidx.constraintlayout.widget.ConstraintLayout>