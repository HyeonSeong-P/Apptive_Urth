<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#faf8f7">
    <ImageButton
        android:id="@+id/back_btn_find_password"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/back"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="48dp"/>
    <TextView
        android:includeFontPadding="false"
        android:id="@+id/guide_input_email_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일을 입력하세요"
        android:textSize="18sp"
        android:textColor="#3e3a39"
        android:layout_marginLeft="31dp"
        app:layout_constraintTop_toBottomOf="@id/back_btn_find_password"
        android:layout_marginTop="41dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:includeFontPadding="false"
        android:id="@+id/find_password_email_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="가입 시 사용한 이메일을 작성해주세요"
        app:layout_constraintTop_toBottomOf="@id/guide_input_email_text"
        android:layout_marginTop="10dp"
        android:textSize="17sp"
        android:layout_marginLeft="33dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@android:color/transparent"
        />

    <Button
        android:includeFontPadding="false"
        android:textStyle="bold"
        android:id="@+id/send_password_find_email_btn"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:background="@drawable/button_design"
        android:text="다음"
        android:textColor="#faf8f7"
        android:layout_marginTop="135dp"
        app:layout_constraintTop_toBottomOf="@id/find_password_email_edit_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>