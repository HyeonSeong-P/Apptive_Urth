<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="210dp"
    android:id="@+id/put_on_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.cardview.widget.CardView
        android:id="@+id/select_put_on_product_card_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="102dp"
        android:layout_height="102dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        >
        <ImageView
            android:id="@+id/select_put_on_product_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"

            />
    </androidx.cardview.widget.CardView>

    <CheckBox
        android:id="@+id/select_put_on_product_check_box"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/circle_custom_checkbox"
        android:button="@null"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="6dp"
        android:layout_marginRight="6dp"
        android:clickable="false"
        />

    <TextView
        android:includeFontPadding="false"
        android:id="@+id/select_put_on_brand_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="9sp"
        android:textColor="#707070"
        app:layout_constraintTop_toBottomOf="@id/select_put_on_product_card_view"
        android:layout_marginTop="6dp"/>
    
    <TextView
        android:includeFontPadding="false"
        android:id="@+id/select_put_on_product_name_text"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="2dp"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@id/select_put_on_brand_name_text"
        app:layout_constraintBottom_toTopOf="@id/select_put_on_product_price_text"/>

    <TextView
        android:includeFontPadding="false"
        android:id="@+id/select_put_on_product_price_text"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:textStyle="bold"
        android:textColor="#3e3a39"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/filter_put_on"
        android:layout_width="102dp"
        android:layout_height="0dp"
        android:src="@drawable/filter_view"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>