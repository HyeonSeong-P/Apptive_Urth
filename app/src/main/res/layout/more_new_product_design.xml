<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/major_product_card_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="102dp"
        android:layout_height="102dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        >
        <ImageView
            android:id="@+id/major_product_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"

            />
    </androidx.cardview.widget.CardView>
    <!--<TextView
        android:id="@+id/more_product_number_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/major_product_card_view"
        app:layout_constraintBottom_toBottomOf="@id/major_product_card_view"
        app:layout_constraintLeft_toLeftOf="@id/major_product_card_view"
        app:layout_constraintRight_toRightOf="@id/major_product_card_view"/>-->
    <TextView
        android:includeFontPadding="false"
        android:id="@+id/major_product_name_text"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="5dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@id/major_product_card_view"
        app:layout_constraintBottom_toTopOf="@id/major_product_price_text"/>

    <TextView
        android:includeFontPadding="false"
        android:id="@+id/major_product_price_text"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:textStyle="bold"
        android:textColor="#3e3a39"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>