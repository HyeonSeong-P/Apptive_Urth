<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#faf8f7"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:includeFontPadding="false"
        android:id="@+id/complete_sign_up_btn_tag_init"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="확인"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#aaaaaa"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="5dp"
        android:layout_marginTop="25dp"/>

    <TextView
        android:includeFontPadding="false"
        android:id="@+id/description_init_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#3e3a39"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="관심 태그를 선택해주세요:)"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="88dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/description_init_tag">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/vegan_tag_init"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="15dp"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:background="@drawable/init_tag_background"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/vegan_title_text_init"
                    android:layout_marginTop="13dp"
                    android:includeFontPadding="false"
                    android:layout_width="89dp"
                    android:layout_height="29dp"
                    android:background="@drawable/circle_image"
                    android:text="#비건소재"
                    android:gravity="center"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/vegan_description_text_init"
                    android:layout_marginTop="9dp"
                    android:includeFontPadding="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#707070"
                    android:layout_gravity="center"
                    android:text="가죽, 모피, 울 등의 동물성 소재를 사용하지 않아요."
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/social_tag_init"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="15dp"
                android:layout_height="96dp"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:background="@drawable/init_tag_background"
                app:layout_constraintTop_toBottomOf="@id/vegan_tag_init">

                <TextView
                    android:id="@+id/social_title_text_init"
                    android:layout_marginTop="13dp"
                    android:includeFontPadding="false"
                    android:layout_width="118dp"
                    android:layout_height="29dp"
                    android:background="@drawable/circle_image"
                    android:text="#사회공헌/기부"
                    android:gravity="center"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/social_description_text_init"
                    android:layout_marginTop="8dp"
                    android:includeFontPadding="false"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#707070"
                    android:layout_gravity="center"
                    android:text="기업의 판매 수익금의 일부를 기부하거나 사회공헌에 기여합니다."
                    android:gravity="center"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/up_tag_init"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="15dp"
                android:layout_height="114dp"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:background="@drawable/init_tag_background"
                app:layout_constraintTop_toBottomOf="@id/social_tag_init">

                <TextView
                    android:id="@+id/up_title_text_init"
                    android:layout_marginTop="13dp"
                    android:includeFontPadding="false"
                    android:layout_width="118dp"
                    android:layout_height="29dp"
                    android:background="@drawable/circle_image"
                    android:text="#업사이클링"
                    android:gravity="center"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/up_description_text_init"
                    android:layout_marginTop="8dp"
                    android:includeFontPadding="false"
                    android:layout_width="296dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#707070"
                    android:layout_gravity="center"
                    android:text="‘Upgrade + Recycle’의 합성어로 ‘새활용’이라고도 합니다.
쓸모없거나 버려진 물건을 새롭게 디자인하거나\n
활용도를 더한 제품입니다."
                    android:gravity="center"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/eco_tag_init"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="15dp"
                android:layout_height="115dp"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:background="@drawable/init_tag_background"
                app:layout_constraintTop_toBottomOf="@id/up_tag_init">

                <TextView
                    android:id="@+id/eco_title_text_init"
                    android:layout_marginTop="13dp"
                    android:includeFontPadding="false"
                    android:layout_width="118dp"
                    android:layout_height="29dp"
                    android:background="@drawable/circle_image"
                    android:text="#친환경소재"
                    android:gravity="center"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/eco_description_text_init"
                    android:layout_marginTop="8dp"
                    android:includeFontPadding="false"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#707070"
                    android:layout_gravity="center"
                    android:text="생산과 소비 시 오염 물질을 발생하지 않거나\n
기존의 다른 소재에 비해 상해적으로 오염 물질을
적게 방출하는 소재입니다."
                    android:gravity="center"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/animal_tag_init"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="15dp"
                android:layout_height="96dp"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:background="@drawable/init_tag_background"
                app:layout_constraintTop_toBottomOf="@id/eco_tag_init">

                <TextView
                    android:id="@+id/animal_title_text_init"
                    android:layout_marginTop="13dp"
                    android:includeFontPadding="false"
                    android:layout_width="118dp"
                    android:layout_height="29dp"
                    android:background="@drawable/circle_image"
                    android:text="#동물복지"
                    android:gravity="center"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/animal_description_text_init"
                    android:layout_marginTop="8dp"
                    android:includeFontPadding="false"
                    android:layout_width="174dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#707070"
                    android:layout_gravity="center"
                    android:text="사육 과정이 윤리적이거나 자연사한
동물의 가죽을 사용합니다."
                    android:gravity="center"
                    />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>





</androidx.constraintlayout.widget.ConstraintLayout>