<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/first_item_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.31"
        app:layout_constraintDimensionRatio="102:192">
        <androidx.cardview.widget.CardView
            android:id="@+id/major_product_card_view1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp"
            >
            <ImageView
                android:id="@+id/major_product_image1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"

                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:includeFontPadding="false"
            android:id="@+id/major_product_name_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="5dp"
            android:textSize="10sp"
            app:layout_constraintTop_toBottomOf="@id/major_product_card_view1"
            app:layout_constraintBottom_toTopOf="@id/major_product_price_text1"/>

        <TextView
            android:includeFontPadding="false"
            android:id="@+id/major_product_price_text1"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:textStyle="bold"
            android:textColor="#3e3a39"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/second_item_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@id/first_item_layout"
        app:layout_constraintRight_toLeftOf="@id/third_item_layout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.31"
        app:layout_constraintDimensionRatio="102:192">
        <androidx.cardview.widget.CardView
            android:id="@+id/major_product_card_view2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp"
            >
            <ImageView
                android:id="@+id/major_product_image2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"

                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:includeFontPadding="false"
            android:id="@+id/major_product_name_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="parent"
            android:layout_marginTop="5dp"
            android:textSize="10sp"
            app:layout_constraintTop_toBottomOf="@id/major_product_card_view2"
            app:layout_constraintBottom_toTopOf="@id/major_product_price_text2"/>

        <TextView
            android:includeFontPadding="false"
            android:id="@+id/major_product_price_text2"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:textStyle="bold"
            android:textColor="#3e3a39"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/third_item_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.31"
        app:layout_constraintDimensionRatio="102:192">
        <androidx.cardview.widget.CardView
            android:id="@+id/major_product_card_view3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp"
            >
            <ImageView
                android:id="@+id/major_product_image3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"

                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:includeFontPadding="false"
            android:id="@+id/major_product_name_text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="5dp"
            android:textSize="10sp"
            app:layout_constraintTop_toBottomOf="@id/major_product_card_view3"
            app:layout_constraintBottom_toTopOf="@id/major_product_price_text3"/>

        <TextView
            android:includeFontPadding="false"
            android:id="@+id/major_product_price_text3"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:textStyle="bold"
            android:textColor="#3e3a39"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:includeFontPadding="false"
            android:id="@+id/more_product_number_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/major_product_card_view3"
            app:layout_constraintBottom_toBottomOf="@id/major_product_card_view3"
            app:layout_constraintLeft_toLeftOf="@id/major_product_card_view3"
            app:layout_constraintRight_toRightOf="@id/major_product_card_view3"/>
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>