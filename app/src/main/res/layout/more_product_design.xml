<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="185dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/more_product_card_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="102dp"
        android:layout_height="102dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        >
        <ImageView
            android:id="@+id/more_product_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"

            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:includeFontPadding="false"
        android:id="@+id/more_product_number_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/more_product_card_view"
        app:layout_constraintBottom_toBottomOf="@id/more_product_card_view"
        app:layout_constraintLeft_toLeftOf="@id/more_product_card_view"
        app:layout_constraintRight_toRightOf="@id/more_product_card_view"/>



</androidx.constraintlayout.widget.ConstraintLayout>